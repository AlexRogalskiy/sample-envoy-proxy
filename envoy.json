{
    "listeners": [{
        "address": "tcp://0.0.0.0:10000",
		"filters": [{
            "name": "http_connection_manager",
            "config": {
                "codec_type": "auto",
                "stat_prefix": "ingress_http",
                "route_config": {
                    "virtual_hosts": [{
                        "name": "service",
                        "domains": [
                            "*"
                        ],
                        "routes": [{
                            "prefix": "/person",
                            "cluster": "service11"
                        }, {
						    "prefix": "/product",
                            "cluster": "service12"
						}]
                    }]
                },
                "filters": [{
                    "name": "router",
                    "config": {}
                }]
            }
        }]
    }],
    "admin": {
        "access_log_path": "/tmp/admin_access.log",
        "address": "tcp://0.0.0.0:9901"
    },
    "cluster_manager": {
		"clusters": [{
			"name": "service11",
			"type": "sds",
			"connect_timeout_ms": 5000,
			"lb_type": "round_robin",
			"service_name": "person-service"
		}, {
			"name": "service12",
			"type": "sds",
			"connect_timeout_ms": 5000,
			"lb_type": "round_robin",
			"service_name": "product-service"
		}],
		"sds": {
			"cluster": {
				"name": "service1",
				"type": "strict_dns",
				"connect_timeout_ms": 5000,
				"lb_type": "round_robin",
				"hosts": [
				  {
					"url": "tcp://192.168.99.100:9200"
				  }
				]
			},
			"refresh_delay_ms": 3000
		}
    }
}